 configuration(ENV["FASTLANE_XCODE_BUILD_CONFIGURATION"])
 skip_profile_detection(true)
 skip_package_ipa(false)
 silent(false)
 clean(true)
 derived_data_path(ENV["FASTLANE_XCODE_BUILD_DERIVED_DATA_PATH"])
